{
    "clients": {
        "pyls": {
            "command": [
                "pyls"
            ],
            "configurationSources": [
                "flake8"
            ],
            "enabled": true,
            "languageId": "python",
            "scopes": [
                "source.python"
            ],
            "settings": {
                "pyls": {
                    "plugins": {
                        "pycodestyle": {
                            "enabled": true
                        }
                    }
                }
            },
            "syntaxes": [
                "Packages/Python/Python.sublime-syntax"
            ]
        }
    }
}
